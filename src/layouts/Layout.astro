---
import Header from '../components/Header.astro';
import '../styles/global.css';
import '@fontsource-variable/onest';
import Footer from '../components/Footer.astro';

interface Props { title: string; description: string; }
const { description, title } = Astro.props as Props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>

  <body class="min-h-screen bg-[#0a0909] text-white">
    <div class="pointer-events-none absolute inset-0 -z-10 bg-[radial-gradient(ellipse_80%_90%_at_50%_-10%,rgba(120,119,235,0.3),rgba(255,255,255,0))]"></div>

    <div class="w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <Header />
      <main class="py-8 sm:py-10 md:py-12">
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>

<style is:global>
  :root { color-scheme: light dark; }

  html {
    font-family: 'Onest Variable', sans-serif;
    font-size: 15px;
    scroll-behavior: smooth;
  }

  /* Mantén globales mínimos; Tailwind se encarga del layout */
  body {
    min-height: 100vh;
    background: #0a0909;
  }

  @media (prefers-reduced-motion: reduce) {
    * { transition-duration: 0.01ms !important; animation-duration: 0.01ms !important; }
  }
</style>
