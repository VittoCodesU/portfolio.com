---
import Python from "./python.astro"
import GithubIcon from "./github.svg"

const TAGS = {
    PYTHON: {
        name: 'Python',
        class: "bg-blue-400 text-black",
        icon: "python" // Cambiar a string identificador
        
    },
    STREAMLIT: {
        name: 'Streamlit',
        class: "bg-red-500 text-white",
        icon: null
    },
    LANGCHAIN: {
        name: 'LangChain',
        class: "bg-blue-800 text-white",
        icon: null
    },
    OPENAI: {
        name: 'OpenAI API',
        class: "bg-black text-white",
        icon: null
    },
    DOTENV: {
        name: 'dotenv',
        class: "bg-yellow-500 text-black",
        icon: null
    }
}

const PROJECTS = [
    {
        title: 'AI RAG APP',
        description: `A Python + Streamlit web application that lets users upload documents, index them in a ChromaDB vector database and query their content through an intelligent chat with conversational memory.
The app integrates Hugging Face and OpenAI models leverages semantic embeddings for context-aware retrieval, and includes a full document/index management interface.`,
        link: "https://ai-rag-app-vittocodesu.streamlit.app",
        github: "https://github.com/VittoCodesU/ai-rag-app",
        image: "/projects/295shots_so.webp",
        tags: [TAGS.PYTHON, TAGS.STREAMLIT, TAGS.LANGCHAIN, TAGS.OPENAI, TAGS.DOTENV]
    }
]
---

{
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
        <article>
            <h3 class="text-2xl font-semibold mb-3">{title}</h3>
            <p class="text-lg mb-4 text-pretty text-gray-400">{description}</p>
            <ul class="flex flex-wrap gap-2 mb-4">
                {tags.map(tag => (
                    <li class={`px-3 py-1 rounded-full text-sm flex items-center gap-1 ${tag.class}`}>
                        {tag.icon === "python" && <Python class="size-4" />}
                        {tag.name}
                    </li>
                ))}
            </ul>

            <a class="block mb-4 transition-transform duration-200 ease-in-out hover:scale-105 hover:shadow-xl hover:shadow-blue-400/20"
            href={link}
            target="_blank"
            rel="noopener noreferrer"
            >

            <img 
                class="w-full"
                src={image} 
                alt={`captura de pantalla del proyecto ${title}`}
            /></a>

            <div class = "mt-4"></div>
            <a class="inline-flex items-center gap-2 rounded-md border border-white/20 text-white px-4 py-2 transition-transform duration-200 ease-in-out hover:scale-105"
            
            href={github}
            target="_blank"
            rel="noopener noreferrer"
            >
            <img 
            src="./github.svg"
            class="w-4 h-4"
            />
            <span>Ver en GitHub</span>
            </a>

        </article>
    ))
}