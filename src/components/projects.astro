---
import Python from "./python.astro"

const TAGS = {
    PYTHON: {
        name: 'Python',
        class: "bg-blue-400 text-black",
        icon: "python" // Cambiar a string identificador
        
    },
    STREAMLIT: {
        name: 'Streamlit',
        class: "bg-red-500 text-white",
        icon: null
    },
    LANGCHAIN: {
        name: 'LangChain',
        class: "bg-blue-800 text-white",
        icon: null
    },
    OPENAI: {
        name: 'OpenAI API',
        class: "bg-black text-white",
        icon: null
    },
    DOTENV: {
        name: 'dotenv',
        class: "bg-yellow-500 text-black",
        icon: null
    }
}

const PROJECTS = [
    {
        title: 'AI RAG APP',
        description: `A Python + Streamlit web application that lets users upload documents, index them in a ChromaDB vector database and query their content through an intelligent chat with conversational memory.
The app integrates Hugging Face and OpenAI models leverages semantic embeddings for context-aware retrieval, and includes a full document/index management interface.`,
        link: "ssdfsdf",
        github: "dfdf",
        image: "/projects/295shots_so.webp",
        tags: [TAGS.PYTHON, TAGS.STREAMLIT, TAGS.LANGCHAIN, TAGS.OPENAI, TAGS.DOTENV]
    }
]
---

{
    PROJECTS.map(({ image, title, description, tags }) => (
        <article>
            <h3 class="text-2xl font-semibold mb-3">{title}</h3>
            <p class="text-lg mb-4 text-pretty text-gray-400">{description}</p>
            <ul class="flex flex-wrap gap-2 mb-4">
                {tags.map(tag => (
                    <li class={`px-3 py-1 rounded-full text-sm flex items-center gap-1 ${tag.class}`}>
                        {tag.icon === "python" && <Python class="size-4" />}
                        {tag.name}
                    </li>
                ))}
            </ul>
            <img 
                class="rounded shadow-2xl shadow-yellow-500/20"
                src={image} 
                alt={`captura de pantalla del proyecto ${title}`}
            />
        </article>
    ))
}