---
import Layout from '../layouts/Layout.astro';
import Badge from '../components/Badge.astro';
import LinkedInIcon from '../components/icons/LinkedIn.astro';
import Experience from '../components/experience.astro';
import Arrowbottom from '../components/Arrowbottom.astro';
import Work from '../components/icons/work.astro';
import ProjectsIcon from '../components/icons/projects_icon.astro';
import Projects from '../components/projects.astro';
---

<Layout
  title="Portfolio Victor T. Martinez - AI & Automation Developer"
  description="Hire Victor T. Martinez to build AI and automation solutions that enhance business processes and deliver real value."
>
  <main>
    <!-- HERO -->
    <section class="w-full mx-auto max-w-[740px] py-16 sm:py-20 md:py-28 text-left">
      <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold mb-4 flex items-center gap-3">
        Hey, I'm Victor T. Martinez
        <a href="https://www.linkedin.com/in/victor-t-martinez-2179ba322/" target="_blank" rel="noopener">
          <div class="relative -translate-y-1 transition-transform duration-200 ease-in-out hover:scale-110">
            <Badge>Available for hire</Badge>
          </div>
        </a>
      </h1>

      <h2 class="text-white/90 text-lg sm:text-xl md:text-2xl mt-4">
        <span>A </span><span class="text-blue-200">Full Stack Developer,</span>
        <span class="text-yellow-200"> AI focused</span>, with hands-on experience building solutions that improve processes and deliver real business value.
      </h2>

      <ul class="mt-6 mb-10">
        <li>
          <a href="https://www.linkedin.com/in/victor-t-martinez-2179ba322/" target="_blank" rel="noopener noreferrer">
            <LinkedInIcon class="hover:scale-110 hover:text-blue-500 transition-transform inline-block" />
          </a>
        </li>
      </ul>
    </section>

    <!-- EXPERIENCE -->
    <section id="experience" class="w-full mx-auto max-w-[740px] text-left">
      <h2 class="py-10 text-2xl sm:text-3xl font-bold text-blue-200 flex items-center justify-between">
        <span class="flex items-center gap-3">
          <Work class="w-8 h-8 opacity-40" />
          <span>Work experience:</span>
        </span>
        <a href="#experience">
          <Arrowbottom class="w-10 h-10 transition-transform duration-200 ease-in-out hover:scale-110" />
        </a>
      </h2>

      <Experience />
    </section>

    <!-- PROJECTS -->
    <section id="projects" class="w-full mx-auto max-w-[740px] py-16 sm:py-20 text-left">
      <h2 class="mb-8 text-2xl sm:text-3xl font-bold text-yellow-200 flex items-center gap-3">
        <ProjectsIcon class="w-8 h-8 opacity-40" />
        <span>Latest projects:</span>
      </h2>
      <Projects />
    </section>
  </main>
</Layout>
